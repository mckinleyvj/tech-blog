{{!-- {{> post perPost}} --}}
{{#if posts.length}}
    <section class="container">
      {{#if logged_in}}
        {{#each posts as |post|}}
            <a class="card-link" href="/post/{{id}}"><div class="card">
            <p class="post-title">{{post.post_title}}</p>
            <p class="post-detail">{{post.post_text}}</p>
            <hr>
            <p class="comment-date">Posted by: {{post.user.username}} on {{format_date post.datetime_stamp}} at {{format_time post.datetime_stamp}}</p>
            </div></a>
        {{/each}}
      {{else}}
        {{#each posts as |post|}}
            <a class="card-link" href="/login"><div class="card">
            <p class="post-title">{{post.post_title}}</p>
            <p class="post-detail">{{post.post_text}}</p>
            <hr>
            <p class="comment-date">Posted by: {{post.user.username}} on {{format_date post.datetime_stamp}} at {{format_time post.datetime_stamp}}</p>
            </div></a>
        {{/each}}
      {{/if}}
    </section>
    {{else}}
    <h2>No posts available.</h2>
  {{/if}}